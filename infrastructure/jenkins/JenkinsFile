pipeline{
    agent any
    environment{
        rollback = 'false'
    }
    stages{
        stage("Dependencies"){
            steps{
                script{
                        sh "bash infrastructure/jenkins/scripts/install-dependencies.sh"
                }
            }
        }
        stage("Build Images"){
            steps{
                script{
                        sh "bash infrastructure/jenkins/scripts/build.sh"
                }
            }
        }
        stage("Push Images"){
            steps{
                script{
                        sh "docker login -u ${docker-credentials_USR} -p ${docker-credentials_PSW}"
                        sh "bash infrastructure/jenkins/scripts/push.sh"
                }
            }
        }
    }
}
